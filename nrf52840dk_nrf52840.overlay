&spi0 {
	compatible = "nordic,nrf-spi";
	/* Cannot be used together with i2c0. */
	status = "disabled";
	sck-pin = <16>;
	mosi-pin = <20>;
	miso-pin = <18>;
};

&spi1 {
	compatible = "nordic,nrf-spi";
	status = "disabled";
	sck-pin = <16>;
	mosi-pin = <20>;
	miso-pin = <18>;
};

&spi2 {
	compatible = "nordic,nrf-spi";
	status = "disabled";
	sck-pin = <25>;
	mosi-pin = <23>;
	miso-pin = <24>;
};

&pwm0 {
	status = "okay";
	ch0-pin = <47>;
	ch0-inverted;
};
